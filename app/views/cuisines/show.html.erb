<section id="cuisine">
  <h1><%= @cuisine.name %></h1>
</section>

<section id="recipes">
  <% @cuisine.recipes.each do |recipe| %>
    <div class="image">
      <%= image_tag recipe.picture.url unless recipe.picture.blank? %>
    </div>
    <h3><%= link_to recipe.name, recipe_path(recipe) %></h3>
    <dl>
      <dt>Tipo de comida</dt>
      <dd><%= recipe.food_type.name %></dd>
      <dt>Quantas pessoas serve</dt>
      <dd><%= recipe.serves %></dd>
      <dt>Tempo de preparo (em minutos)</dt>
      <dd><%= recipe.prep_time %></dd>
      <dt>Dificuldade</dt>
      <dd><%= recipe.difficulty.humanize %></dd>
    </dl>
    <% if recipe.user == current_user %>
      <p><%= button_to "Editar", edit_recipe_path(recipe), method: :get %></p>
      <%= button_to "Excluir", @recipe_id, method: :delete %>
    <% end %>
  <% end%>
</section>

<%= button_to "Voltar", root_path, method: :get%>
