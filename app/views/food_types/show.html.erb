<section id="food_type">
  <h1><%= @food_type.name %></h1>
</section>

<div class="col-md-4">
  <section id="recipes">
    <% @food_type.recipes.each do |recipe| %>
    <div class="thumbnail">
      <%= image_tag recipe.picture.url unless recipe.picture.blank? %>
      <div class="caption">
        <h2 class="text-center"><%= link_to recipe.name, recipe_path(recipe) %></h2>
        <dl class="dl-horizontal">
          <dt>Cozinha</dt>
          <dd><%= recipe.cuisine.name %></dd>
          <dt>Serve</dt>
          <dd><%= recipe.serves %> pessoa(s)</dd>
          <dt>Tempo de preparo</dt>
          <dd><%= recipe.prep_time %> minuto(s)</dd>
          <dt>Dificuldade</dt>
          <dd><%= recipe.difficulty.humanize %></dd>
        </dl>
        <% if recipe.user == current_user %>
          <%= button_to "Editar", edit_recipe_path(recipe), method: :get, class: "btn btn-default btn-xs" %>
          <%= button_to "Excluir", @recipe_id, method: :delete, class: "btn btn-default btn-xs" %>
        <% end %>
      </div>
    </div>
    <% end%>
  </section>
</div>

<%= button_to "Voltar", root_path, method: :get, class: "btn btn-default" %>
