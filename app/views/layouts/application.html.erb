<!DOCTYPE html>
<html>
  <head>
    <title>SocialRecipes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-brand"><%= link_to "Social Recipes", root_path %></div>

          <div class="row">

            <section id="search">
              <div class="col-md-4">
                <form class="navbar-form navbar-left">
                  <%= form_tag("/search", method: "get") do %>
                    <%= label_tag(:search, "Buscar Receita") %>
                    <%= text_field_tag(:search) %>
                    <%= submit_tag("Buscar") %>
                  <% end %>
                </form>
              </div>
            </section>

            <section id="authentication">
                <div class="col-md-1 col-md-offset-2">
                  <%= link_to "Criar receita", new_recipe_path, method: :get, class: "btn btn-default navbar-btn" %>
                </div>
                <% if current_user %>
                  <div class="col-md-3">
                    <%=link_to "Sair", logout_path, method: "delete", class: "btn btn-default text-rigth navbar-btn" %>
                 </div>
                <% else %>
                  <div class="col-md-1">
                    <%= link_to "Criar usuÃ¡rio", new_user_path, method: "get", class: "btn btn-default navbar-btn" %>
                  </div>
                  <div class="col-md-1">
                    <%= link_to "Entrar", login_path, method: "get", class: "btn btn-default navbar-btn" %>
                  </div>
                <% end %>
            </section>

          </div>
        </div>
     </nav>
    </header>

    <main>
    <div class="container">
      <% if flash[:notice] %>
        <p><%= flash[:notice] %></p>
      <% end %>

      <%= yield %>
    </div>
    </main>
  </body>
</html>
