<% if current_user %>
  <% if @recipe.is_favorite?(current_user) %>
    <strong>Favorita!</strong>
    <%= button_to "Desfavoritar", favorite_path(recipe_id: @recipe.id, user_id: current_user.id), method: :delete, class: "btn btn-default btn-xs" %>
  <% else %>
    <strong><%= button_to "Favoritar", favorites_path(recipe_id: @recipe.id, user_id: current_user), method: :post, class: "btn btn-default btn-xs" %></strong>
  <% end %>
<% end %>
