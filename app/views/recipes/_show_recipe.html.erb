<% @recipes.each do |recipe| %>
  <%= image_tag recipe.picture.url unless recipe.picture.blank? %>
  <h1><%= link_to recipe.name, recipe_path(recipe) %></h1>
  <dl>
    <dt>Cozinha</dt>
    <dd><%= recipe.cuisine.name %></dd>
    <dt>Tipo de comida</dt>
    <dd><%= recipe.food_type.name %></dd>
    <dt>Quantas pessoas serve</dt>
    <dd><%= recipe.serves %></dd>
    <dt>Tempo de preparo (em minutos)</dt>
    <dd><%= recipe.prep_time %></dd>
    <dt>Dificuldade</dt>
    <dd><%= recipe.difficulty.humanize %></dd>
    <dt>Ingredientes</dt>
    <dd><%= recipe.ingredients %></dd>
    <dt>Passo a passo</dt>
    <dd><%= recipe.prep_steps %></dd>
  </dl>
<% end %>
