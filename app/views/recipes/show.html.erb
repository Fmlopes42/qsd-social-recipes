<section id="recipe">
  <div class="image">
    <%= image_tag @recipe.picture.url unless @recipe.picture.blank? %>
  </div>
  <div class="dl-horizontal">
    <h1><%= @recipe.name %></h1>
    <dl>
      <dt>Tipo de comida</dt>
      <dd><%= @recipe.food_type.name %></dd>
      <dt>Cozinha</dt>
      <dd><%= @recipe.cuisine.name %></dd>
      <dt>Serve</dt>
      <dd><%= @recipe.serves %> pessoa(s)</dd>
      <dt>Tempo de preparo</dt>
      <dd><%= @recipe.prep_time %> minuto(s)</dd>
      <dt>NÃ­vel de dificuldade</dt>
      <dd><%= @recipe.difficulty.humanize %></dd>
      <dt> Ingredientes</dt>
      <dd><%= @recipe.ingredients %></dd>
      <dt>Passo a passo</dt>
      <dd><%= @recipe.prep_steps %></dd>
      <dt>Criado por</dt>
      <dd><%= @recipe.user.name %></dd>
    </dl>
    <% if @recipe.user == current_user %>
      <%= link_to "Editar", edit_recipe_path(@recipe), method: :get, class: "btn btn-default" %>
      <%= link_to "Excluir", @recipe_id, method: :delete, class: "btn btn-default" %>
    <% end %>
  </div>
  <%= link_to "Voltar", root_path, method: :get, class: "btn btn-default" %>
</section>
