<section id='login'>
  <h1>Log in</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :mail, "E-mail" %>
        <%= f.email_field :mail, class: 'form-control' %>

        <%= f.label :password , "Senha" %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Entrar", class: "btn btn-primary" %>
      <% end %>

      <p>Não está cadastrado? <%= link_to "Cadastre-se agora!", new_user_path %></p>
    </div>
  </div>
</section>

<%= button_to "Voltar", root_path, method: "get" %>
